<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/holo_red_light">


    <TableLayout

        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="382dp"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/result"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:background="@drawable/stroke"
                android:cursorVisible="false"
                android:editable="false"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:gravity="end"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="50dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button_1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/one"
                android:width="5dp"
                android:textColor="#fff"
                android:text="1"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:text="2"
                android:textSize="20dp"
                android:background="@drawable/two"
                android:width="5dp"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:text="3"
                android:textSize="20dp"
                android:background="@drawable/three"
                android:width="5dp"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/add"
                android:width="5dp"
                android:text="+"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button_4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/four"
                android:width="5dp"
                android:text="4"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:text="5"
                android:textSize="20dp"
                android:background="@drawable/five"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:text="6"
                android:textSize="20dp"
                android:background="@drawable/six"
                android:width="5dp"/>

            <Button
                android:id="@+id/button_minus"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sub"
                android:width="5dp"
                android:text="-"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_7"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/seven"
                android:width="5dp"
                android:text="7"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/eight"
                android:width="5dp"
                android:text="8"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/nine"
                android:width="5dp"
                android:textSize="20dp"
                android:text="9"
                />

            <Button
                android:id="@+id/button_multiple"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/mul"
                android:width="5dp"
                android:text="*"
                android:textSize="20dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/button_0"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/zero"
                android:width="5dp"
                android:textSize="20dp"
                android:text="0" />

            <Button
                android:id="@+id/button_c"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/c"
                android:width="5dp"
                android:textSize="20dp"
                android:text="c" />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/equals"
                android:width="5dp"
                android:text="="
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_divide"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/div"
                android:width="5dp"
                android:text="/"
                android:textSize="20dp"/>
        </TableRow>


        <ImageView
            android:layout_width="43dp"
            android:layout_height="227dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/indexr" />
    </TableLayout>



</RelativeLayout>